<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Liste des apprenants</title>

  

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f9;
      margin: 0;
      padding: 40px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .container {
      max-width: 1000px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th {
      background: #4f46e5;
      color: white;
      padding: 12px;
      text-align: left;
    }

    td {
      padding: 12px;
      border-bottom: 1px solid #ddd;
    }

    tr:hover {
      background: #f1f5f9;
    }

    .empty {
      text-align: center;
      padding: 20px;
      color: gray;
    }

    a {
      display: inline-block;
      margin-top: 20px;
      text-decoration: none;
      background: black;
      color: white;
      padding: 10px 15px;
      border-radius: 6px;
      margin-left: 30px;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Liste des apprenants</h1>

    <a href="{{ route('apprenants.createForm') }}" style="background-color: #4f46e5; color: white; ">Ajouter</a>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nom</th>
          <th>Prénom</th>
          <th>Email</th>
          <th>Genre</th>
          <th>Téléphone</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        @if(apprenants.length > 0)

          @each(apprenant in apprenants)
            <tr>
              <td>{{ apprenant.id }}</td>
              <td>{{ apprenant.name }}</td>
              <td>{{ apprenant.lastName }}</td>
              <td>{{ apprenant.email }}</td>
              <td>{{ apprenant.genre }}</td>
              <td>{{ apprenant.phone }}</td>

              <td>
                <a href="{{ route('apprenants.getApprenant', { id: apprenant.id }) }}" style="background-color: yellow; color: black;" >Détails</a>
                <!-- <a href="#">Modifier</a> -->
                <a href="{{ route('apprenants.editForm', { id: apprenant.id }) }}" style="background-color: green; color: white;">Modifier</a>
                <!-- <a href="#">Supprimer</a> -->
                <form action="{{ route('apprenants.supprimerApprenant', { id: apprenant.id }) }}" method="POST">
            {{ csrfField() }}
            <button
              style="background:#e74c3c;color:white;border:none;padding:6px 10px;border-radius:6px"
              onclick="return confirm('Voulez-vous supprimer cet(te) apprenant(e) ?')"
            >
              Supprimer
        </button>
          </form>
              </td>
            </tr>
          @end

        @else
          <tr>
            <td colspan="6" class="empty">
              Aucun apprenant enregistré
            </td>
          </tr>
        @endif
      </tbody>
    </table>

    

  </div>

  <a href="{{ route ('/') }}">← Retour</a>
</body>
</html>
