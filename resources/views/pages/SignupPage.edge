    <script>
        // Auto-focus on phone input
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('phoneInput').focus();
        });

        // Step navigation functions
        function showStep1() {
            document.getElementById('step1').classList.remove('hidden');
            document.getElementById('step2').classList.add('hidden');
            document.getElementById('step3').classList.add('hidden');
        }

        function showStep2() {
            const phone = document.getElementById('phoneInput').value;
            const checkbox = document.getElementById('agreeTerms');
            
            if (!phone || !checkbox.checked) {
                alert('Veuillez saisir votre numÃ©ro et accepter les conditions.');
                return;
            }
            
            document.getElementById('phoneDisplay').textContent = '+33 ' + phone;
            document.getElementById('step1').classList.add('hidden');
            document.getElementById('step2').classList.remove('hidden');
            
            // Start countdown timer
            startTimer();
            
            // Focus on first code input
            document.querySelector('#step2 input').focus();
        }

        function showStep3() {
            document.getElementById('step2').classList.add('hidden');
            document.getElementById('step3').classList.remove('hidden');
            document.getElementById('nameInput').focus();
        }

        // Code input navigation
        function moveToNext(current, index) {
            if (current.value.length === 1 && index < 5) {
                const nextInput = document.querySelectorAll('#step2 input')[index + 1];
                nextInput.focus();
            }
            
            // Auto-submit when all fields are filled
            const inputs = document.querySelectorAll('#step2 input');
            const allFilled = Array.from(inputs).every(input => input.value.length === 1);
            if (allFilled) {
                setTimeout(() => showStep3(), 500);
            }
        }

        // Timer countdown
        function startTimer() {
            let timeLeft = 90; // 1:30
            const timerElement = document.getElementById('timer');
            
            const countdown = setInterval(() => {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    clearInterval(countdown);
                    timerElement.textContent = '00:00';
                }
                timeLeft--;
            }, 1000);
        }

        // Photo preview
        function previewPhoto(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profilePreview').src = e.target.result;
                    document.getElementById('profilePreview').classList.remove('hidden');
                    document.getElementById('photoPlaceholder').classList.add('hidden');
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Complete signup
        function completeSignup() {
            const name = document.getElementById('nameInput').value;
            
            if (!name.trim()) {
                alert('Veuillez saisir votre nom.');
                return;
            }
            
            document.getElementById('successModal').classList.remove('hidden');
        }

        // Redirect to chat
        function redirectToChat() {
            // Here you would normally redirect to the chat interface
            alert('Redirection vers l\'interface de chat...');
            document.getElementById('successModal').classList.add('hidden');
        }

        // Enable/disable continue button based on form validation
        document.getElementById('phoneInput').addEventListener('input', validateStep1);
        document.getElementById('agreeTerms').addEventListener('change', validateStep1);

        function validateStep1() {
            const phone = document.getElementById('phoneInput').value;
            const checkbox = document.getElementById('agreeTerms').checked;
            const continueBtn = document.getElementById('continueBtn');
            
            continueBtn.disabled = !phone || !checkbox;
        }
    </script>
