                            </div>
                        </div>

                        <!-- Timer -->
                        <div class="text-center">
                            <p class="text-whatsapp-light-gray text-sm">
                                Nouveau code dans <span id="timer" class="font-semibold">01:30</span>
                            </p>
                        </div>

                        <!-- Verify Button -->
                        <button 
                            onclick="showStep3()" 
                            class="w-full bg-whatsapp-green text-white py-3 rounded-lg font-semibold hover:bg-whatsapp-dark-green transition-colors duration-200"
                        >
                            VÃ©rifier
                        </button>
                    </div>

                    <!-- Step 3: Profile Setup -->
                    <div id="step3" class="space-y-6 hidden">
                        <div class="text-center">
                            <h2 class="text-xl font-semibold text-whatsapp-dark-gray mb-2">Informations de profil</h2>
                            <p class="text-whatsapp-light-gray text-sm">
                                Veuillez fournir votre nom et une photo de profil optionnelle.
                            </p>
                        </div>

                        <!-- Profile Photo Upload -->
                        <div class="flex justify-center">
                            <div class="relative">
                                <div class="w-32 h-32 bg-gray-200 rounded-full flex items-center justify-center overflow-hidden">
                                    <img id="profilePreview" src="" alt="" class="w-full h-full object-cover hidden">
                                    <div id="photoPlaceholder" class="text-center">
                                        <i class="fas fa-camera text-gray-400 text-3xl mb-2"></i>
                                        <p class="text-xs text-gray-500">AJOUTER UNE PHOTO</p>
                                    </div>
                                </div>
                                <input type="file" id="photoInput" accept="image/*" class="hidden" onchange="previewPhoto(this)">
                                <button 
                                    onclick="document.getElementById('photoInput').click()"
                                    class="absolute bottom-0 right-0 w-10 h-10 bg-whatsapp-green rounded-full flex items-center justify-center text-white shadow-lg hover:bg-whatsapp-dark-green transition-colors"
                                >
                                    <i class="fas fa-plus"></i>
